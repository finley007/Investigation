<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
        <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
            <property name="driver" value="com.mysql.jdbc.Driver"/>
            <property name="url" value="jdbc:mysql://127.0.0.1:3306/stock?useUnicode=true&amp;characterEncoding=utf8"/>
            <property name="username" value="root"/>
            <property name="password" value=""/>
            </dataSource>
        </environment>
    </environments>
    
    <mappers>
        <mapper resource="stock/model/MyStockMapper.xml"/>
        <mapper resource="stock/model/StockMapper.xml"/>
        <mapper resource="stock/model/MyActionMapper.xml"/>
        <mapper resource="stock/model/RuleItemMapper.xml"/>
        <mapper resource="stock/model/RuleResultMapper.xml"/>
        <mapper resource="stock/model/RuleRunHistoryMapper.xml"/>
        <mapper resource="stock/model/RuleTypeMapper.xml"/>
        <mapper resource="stock/model/CalendarMapper.xml"/>
    </mappers>
</configuration>